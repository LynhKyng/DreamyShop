<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DREAMYMVC</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="logo">DREAMY</div>
        <div class="hamburger">
            <div class="line"></div>
            <div class="line"></div>
            <div class="line"></div>
        </div>
        <nav class="nav-bar">
            <ul>
                <li>
                    <a href="" class="active">Trang chủ</a>
                </li>
                <li>
                    <a href="" class="">Khám phá</a>
                </li>
                <li>
                    <a href="" class="">Ưu đãi</a>
                </li>
                <li>
                    <a href="" class="">Về chúng tôi</a>
                </li>
                <li>
                    <a href="" class="">Liên hệ</a>
                </li>
            </ul>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="section-p1">
        <div class="col">
            <h3>DREAMY</h3>
            <h4>Liên hệ</h4>
            <p><strong>Địa chỉ: </strong> ngõ An Hòa, Mộ Lao, Hà Đông, Hà Nội</p>
            <p><strong>Số điện thoại: </strong> +841123456789</p>
            <p><strong>Giờ làm việc: </strong> 8h-18h, Cả Tuần</p>
            <div class="follow">
                <h4>Theo dõi chúng tôi</h4>
                <div class="icon">
                    <i class="bi bi-facebook"></i>
                    <i class="bi bi-twitter"></i>
                    <i class="bi bi-instagram"></i>
                    <i class="bi bi-youtube"></i>
                </div>
            </div>
        </div>

        <div class="col">
            <h4>Thông tin</h4>
            <a href="">Về chúng tôi</a>
            <a href="">Thông tin giao hàng</a>
            <a href="">Chính sách</a>
            <a href="">Liên hệ</a>
        </div>

        <div class="col">
            <h4>Tài khoản</h4>
            <a href="">Đăng ký</a>
            <a href="">Xem giỏ hàng</a>
            <a href="">Danh sách của tôi</a>
            <a href="">Đơn hàng của tôi</a>
            <a href="">Giúp đỡ</a>
        </div>

        <div class="col install">
            <h4>Tải app</h4>
            <p>Từ App Store hoặc Google Play</p>
            <div class="row2">
                <img src="./img/HomePage/app.jpg" alt="">
                <img src="./img/HomePage/play.jpg" alt="">
            </div>
            <p>Bảo mật thanh toán</p>
            <img src="./img/HomePage/pay.png" alt="">
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
